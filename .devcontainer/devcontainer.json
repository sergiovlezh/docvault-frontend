{
    "name": "DocVault - Front",
    "dockerComposeFile": [
        "./docker-compose.dev.yml"
    ],
    "workspaceFolder": "/workspace",
    "service": "frontend",
    "runServices": [
        "frontend"
    ],
    "shutdownAction": "stopCompose",
    "forwardPorts": [
        3000 // frontend
    ],
    "mounts": [
        "source=${env:SSH_AUTH_SOCK},target=/ssh-agent,type=bind,consistency=cached"
    ],
    "containerEnv": {
        "SSH_AUTH_SOCK": "/ssh-agent"
    },
    "initializeCommand": "docker network create devcontainer-net || true",
    // If containers are not visible, you should connect them to the network manually
    // e.g., docker network connect devcontainer-net <container_name>
    "runArgs": [
        "--network=devcontainer-net"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "mhutchie.git-graph",
                "GitHub.copilot",
                "github.copilot-chat",
                "dbaeumer.vscode-eslint",
                "Orta.vscode-jest",
                "esbenp.prettier-vscode"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "files.autoSave": "afterDelay",
                "files.autoSaveDelay": 1000,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": "always"
                },
                "editor.rulers": [
                    80,
                    120
                ]
            }
        }
    }
}